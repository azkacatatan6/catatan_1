import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  // This widget is the root of your application.
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        backgroundColor: Colors.deepPurple[200],
        appBar: AppBar(
          backgroundColor: Colors.deepPurple,
          title: 
          Center(child: Text("Learning Flutter Widget", style: TextStyle(color: Colors.white, fontSize: 20, fontWeight: FontWeight.bold),)),
          elevation: 5,
          leading: Icon(Icons.menu, color: Colors.white,),
          actions: [IconButton(onPressed: () {}, icon: Icon(Icons.logout), color: Colors.white,)],
        ),

        body: Center(
          child: ListView(
            scrollDirection: Axis.vertical,
            // scrolldirection bisa diubah seusai arah vertikal atau horizontal
            children: [
            // 1
            Container(
                color: Colors.red,
                height: 500,

              
            ),
          
            // 2
            Container(

              height: 500,
                color: Colors.red[400],
              ),
              

          
            // 3
            Container(

                color: Colors.red[200],
                height: 500,

              
          
            )
            ],
          
          ),
        )


        

      ),
    );
  }
}


